  Booktitle                = {European Journal of Mechanics B-Fluids},
  Comment                  = {Cj3fb Times Cited:0 Cited References Count:10},
  ISSN                     = {0997-7546},
  Keywords                 = {ship waves stationary phase numerical evaluation},
